
@model IPagedList<RestaurantListViewModel>



<div id="restaurantList">

    <div class="pagedList" data-otf-target="#restaurantList">
        @*must pass a model, second param - given a page, generate a url for that page, third param gives you all kinds of options for pager*@
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                                            PagedListRenderOptions.MinimalWithItemCountText)
    </div>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div>
                <h4>@item.Name</h4>
                <div>@item.City, @item.Country</div>
                <div>Reviews: @item.CountOfReviews</div>
                <hr />
            </div>
        }
    }
</div>
